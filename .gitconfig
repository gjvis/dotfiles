[core]
  editor = subl -w
  excludesfile = ~/.gitignore_global

[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  apply-gitignore = !git ls-files -ci --exclude-standard -z | xargs -0 git rm --cached

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. $HOME/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. $HOME/.githelpers && pretty_git_log"
  la = !git l --all

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "status"]
  added = green
  changed = red bold
  untracked = magenta bold

[color "branch"]
  remote = yellow

[push]
  default = simple

[url "git@github.com:moneyadviceservice/"]
  insteadOf = "mas:"

[url "git@github.com:gjvis/"]
  insteadOf = "gjvis:"

[include]
  path = ~/.dotfilesPrivate/.gitconfig
